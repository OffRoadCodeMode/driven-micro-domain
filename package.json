{
  "name": "sample-microservice",
  "version": "1.0.0",
  "description": "Sample microservice built with driven-micro framework",
  "main": "dist/src/entrypoints/lambda.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/src/entrypoints/api.js",
    "dev": "ts-node src/entrypoints/api.ts",
    "test": "jest --runInBand",
    "test:parallel": "jest",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "driven-micro": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/supertest": "^2.0.12",
    "aws-sdk-client-mock": "^3.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
